<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Apprentice Dashboard</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    h2 { margin-bottom: 10px; }
    .section { margin-top: 30px; }
    .toggle-header {
      cursor: pointer;
      background-color: #0d6d09;
      color: white;
      padding: 10px;
      font-weight: bold;
      border: 1px solid #8d8b8b;
    }
    .table-container { display: none; margin-top: 10px; }
    table { width: 100%; border-collapse: collapse; }
    th, td {
      padding: 8px 12px;
      border: 1px solid #979393;
      text-align: left;
    }
    th { background-color: #1c09c5; color: white; }
    a.view-link { color: #d11010; text-decoration: none; }
    a.view-link:hover { text-decoration: underline; }
    .dashboard-top {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: wrap;
      margin-bottom: 20px;
    }
    .totals { flex: 1; }
    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    .btn {
      padding: 10px 16px;
      background-color: #09a809;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      font-weight: bold;
      text-align: center;
      transition: background-color 0.3s ease;
    }
    .btn:hover { background-color: #0056b3; }
    .btn.disabled {
      background-color: #6c757d;
      pointer-events: none;
      opacity: 0.6;
    }
  </style>
  <script>
    function toggleTable(id) {
      const el = document.getElementById(id);
      el.style.display = el.style.display === 'none' ? 'block' : 'none';
    }
  </script>
</head>
<body>
  <div style="text-align: center; margin-bottom: 20px;">
    <img src="/images/logo.png" alt="Union Logo" style="max-width: 200px; height: auto;" />
  </div>

  <h2 style="text-align: center;">Welcome to the Apprentice Portal</h2>
  <h2 style="text-align: center;"><%= user.name %> (Reg# <%= user.reg %>)</h2>
  <h3 style="text-align: center;">Status: <%= apprenticeData.apprenticeStatus %></h3>

  <div class="dashboard-header">
    <div class="dashboard-top">
      <div class="totals">
        <p><strong>Total Employer Hours:</strong> <%= apprenticeData.totalEmployerHours.toFixed(2) %></p>
        <p><strong>Total Time Card Hours:</strong> <%= apprenticeData.totalHours.toFixed(2) %></p>
        <p><strong>Total Class Hours:</strong> <%= apprenticeData.totalClassHours.toFixed(2) %></p>
        <p><strong>Total Disciplinary Points:</strong> <%= apprenticeData.totalPoints %></p>
      </div>
      <div class="action-buttons">
        <a href="/apprentice/submit-timecard" class="btn">Submit Time Card</a>
        <% if (apprenticeData.advancementLink) { %>
          <a href="<%= apprenticeData.advancementLink %>" target="_blank" class="btn btn-outline-info btn-sm">See Last Advancement</a>
        <% } %>
        <a href="#" class="btn disabled">Raise Requirements</a>
      </div>
    </div>
  </div>

  <h3>Work Process Schedule</h3>
  <table>
    <thead>
      <tr>
        <th>Category</th>
        <th>Total Hours</th>
        <th>Goal Hours</th>
      </tr>
    </thead>
    <tbody>
      <% for (const [label, total] of Object.entries(apprenticeData.categoryTotals)) {
           const goal = apprenticeData.goalHours[label] || 0;
      %>
        <tr>
          <td><%= label %></td>
          <td style="color: <%= total < goal ? 'red' : 'black' %>;"><%= total.toFixed(2) %></td>
          <td><%= goal %></td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <% const regKey = user.reg.toString(); %>

  <% function renderHoursTable(submissions, formIdFilter, label, tableId) { %>
    <div class="section">
      <div class="toggle-header" onclick="toggleTable('<%= tableId %>')"><%= label %> ▼</div>
      <div class="table-container" id="<%= tableId %>">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th><%= label %></th>
              <th>View</th>
            </tr>
          </thead>
          <tbody>
            <% submissions.forEach(sub => {
              const answers = sub.answers || {};
              const rawValue = answers[regKey];
              const value = (typeof rawValue === 'number' || typeof rawValue === 'string') && rawValue !== '' ? rawValue : null;

              if (sub.formId === formIdFilter && value !== null) {
                let reportDate = sub.created_at?.split(' ')[0] || '—';
                let isFallback = true;

                if (formIdFilter === '252059096099063' && answers['month_year']) isFallback = false;
                if (formIdFilter === '252274710275152' && answers['typeA']) isFallback = false;

                const viewLink = `https://www.jotform.com/submission/${sub.id}`;
            %>
              <% /* Wrap entire row in one block to preserve scope */ %>
              <tr>
                <td style="<%= isFallback ? 'color: gray; font-style: italic;' : '' %>"><%= reportDate %></td>
                <td><%= value %></td>
                <td><a class="view-link" href="<%= viewLink %>" target="_blank">View</a></td>
              </tr>
            <% } }) %>
          </tbody>
        </table>
      </div>
    </div>
  <% } %>

  <% function renderStandardTable(submissions, fieldKey, label, tableId) { %>
    <div class="section">
      <div class="toggle-header" onclick="toggleTable('<%= tableId %>')"><%= label %> ▼</div>
      <div class="table-container" id="<%= tableId %>">
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th><%= label %></th>
              <th>View</th>
            </tr>
          </thead>
          <tbody>
            <% submissions.forEach(sub => {
              const answers = sub.answers || {};
              const value = answers[fieldKey];
              if (value) {
                let date = sub.created_at?.split(' ')[0] || '—';
                if (sub.formId === '240755677560162' && answers['monday1']) {
                  const mondayDate = answers['monday1'];
                  if (typeof mondayDate === 'object' && mondayDate !== null) {
                    const { month, day, year } = mondayDate;
                    if (month && day && year) date = `${month}/${day}/${year}`;
                  } else if (typeof mondayDate === 'string') {
                    date = mondayDate;
                  }
                }
                const viewLink = `https://www.jotform.com/submission/${sub.id}`;
            %>
              <tr>
                <td><%= date %></td>
                <td><%= value %></td>
                <td><a class="view-link" href="<%= viewLink %>" target="_blank">View</a></td>
              </tr>
            <% } }) %>
          </tbody>
        </table>
      </div>
    </div>
  <% } %>

  <% renderHoursTable(apprenticeData.submissions, '252059096099063', 'Employer Hours', 'table-employer'); %>
  <% renderStandardTable(apprenticeData.submissions, 'totalHours', 'Time Card Hours', 'table-timecard'); %>
  <% renderHoursTable(apprenticeData.submissions, '252274710275152', 'Class Hours', 'table-class'); %>
    <% renderStandardTable(apprenticeData.submissions, 'calculation', 'Disciplinary Points', 'table-points'); %>

  <p><a href="/logout">Logout</a></p>
</body>
</html>